{% extends "base.njk" %}

{% block head %}
<title>{{ title }}</title>
<link rel="stylesheet" href="/css/maingrid.css" type="text/css" />
<link rel="stylesheet" href="/css/main.css" type="text/css" />
{% endblock %}

{% block content %}
    

<!--POST-->
<div class="max-w-screen-lg mx-auto " style="margin:3rem auto; padding:0 2rem">
  <div class="grid grid-cols-4">
    <div class="col-span-full">
      <article>
        <header>
          <h1 class=" font-bold text-4xl text-gray-800">
            {{ title }}
          </h1>
          <br>
          <h6 class=" font-bold text-1xl text-gray-800">
            {{ date | dateFormat('DD/MM/YYYY') }}
          </h6>



        </header>

        <style>
  
          @media (max-width: 760px){
              .presponsive{
                  padding-left: 0!important;
              }
          }
  
        </style>

        <section class="content text-justify my-4">
          <img src="{{imagen}}">
        </section>
        
        <section class="content text-justify">
          <div class="grid grid-cols-6">
            <div class="col-span-6 md:col-span-6 py-4">
              <p>{{ descripcion | rmj | safe}}</p>
            </div>

            <div class="d-flex">
                <div class="cta-button mr-4">
                    <a class="btn" href="{{minuta}}" download>Descargar Agenda <i class="fa fa-long-arrow-right"></i></a>
                </div>  
                <div class="cta-button ml-4">
                    <a class="btn" href="{{documentosads}}" download>Descargar presentaciones  <i class="fa fa-long-arrow-right"></i></a>
                </div>
            </div>
 
          </div>

        </section>
        
      </article>
    </div>
    <div class="col-span-full mt-6">
      <h2 class="font-bold text-xl border-b-2 border-yellow-500 mb-4 pb-4">MÃ¡s Reuniones</h2>
      <ul>
        {% for reunion in collections.reuniones | limit(4)%}
        {% if page.url !== reunion.url %}
            <!-- reunion-->
						<a href="{{reunion.url}}"><div class="event-bg event-bg-03 pos-rel mb-30" style="margin:1rem 0;border-top:2px solid #ccc;background-color:#fff!important">
							<div class="row" style=" align-items:center">
								<div class="col-xl-6 col-lg-6">
									<div class="event-img mb-20 center" style="height:300px">
										<img src="{{reunion.data.imagen}}" style="height:100%!important;"  alt="">
									</div>
								</div>
								<div class="col-xl-6 col-lg-6">
									<div class="event-wrapper mb-20 " >
										<div class="event-text">
											<!--span><i class="far fa-map-marked-alt verdeo"></i> Guatemala - 8 de Septiembre 2021</span-->
											<h3> {{reunion.data.title}}</h3>
										</div>
										<div class="event-meta">
											<span><!--i class="far fa-user-circle"></i-->{{reunion.data.date | dateFormat('DD/MM/YYYY')}}</span>
										</div><br>
									</div>
								</div>
							</div>
						</div></a>
        {% endif %}
        {% endfor %}

      </ul>
    </div>
  </div>
</div>

{% endblock %}