{% extends "base.njk" %}

{% block head %}
<title>{{ title }}</title>
<link rel="stylesheet" href="/css/maingrid.css" type="text/css" />
<link rel="stylesheet" href="/css/main.css" type="text/css" />
{% endblock %}

{% block content %}
    

<!--POST-->
<div class="max-w-screen-lg mx-auto " style="margin:3rem auto; padding:0 2rem">
  <div class="grid grid-cols-4">
    <div class="col-span-full">
      <article>
        <header>
          <h1 class=" font-bold text-4xl text-gray-800">
            {{ title }}
          </h1>
          <br>
          <h6 class=" font-bold text-1xl text-gray-800">
            {{ subtitle }}
          </h6>
          <img src="{{icono}}">


        </header>

        <style>
  
          @media (max-width: 760px){
              .presponsive{
                  padding-left: 0!important;
              }
          }
  
        </style>
        
        <section class="content text-justify">
          <div class="grid grid-cols-6">
            <div class="col-span-6 md:col-span-6 ">
              {{ descripcion | safe}}
            </div>
            <div class="col-span-6 md:col-span-6 presponsive" style="padding-left: 3rem;">
              <h6>Escucha nuestros podcasts</h6>
              <div class="w-full">
                {% if collections.podcasts %}
                  {% for podcast in collections.podcasts | reverse | limit(4) %}
                    <div class="block mb-4">
                      <iframe src="{{ podcast.data.link }}" width="100%"
                        height="152" frameBorder="0" allowfullscreen="" class="rifra"
                        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe>
                    </div>
                  {% endfor %}
                {% endif %}
              </div>
            </div>  
          </div>

        </section>
        
      </article>
    </div>
    <div class="col-span-full mt-6">
      <h2 class="font-bold text-xl border-b-2 border-yellow-500 mb-4 pb-4">MÃ¡s Mesas</h2>
      <ul>
        {% for mesa in collections.mesas | reverse | limit(4)%}
        {% if page.url !== mesa.url %}
            <a href="{{mesa.url}}"><div class="event-bg event-bg-03 pos-rel mb-30 col-lg-6 col-xl-6" style="margin:1rem 0;background-color:#fff!important">
                <div class="row" style=" align-items:center">
                    <div class="col-xl-6 col-lg-6">
                        <div class="event-img mb-20 center">
                            <img style="height:100%!important" src="{{mesa.data.icono}}" alt="">
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6">
                        <div class="event-wrapper mb-20 " >
                            <div class="event-text">
                                <!--span><i class="far fa-map-marked-alt verdeo"></i> Guatemala - 8 de Septiembre 2021</span-->
                                <h3> {{mesa.data.title}}</h3>
                            </div>
                            <div class="event-meta">
                                <span><!--i class="far fa-user-circle"></i-->{{mesa.data.subtitle}}</span>
                            </div><br>
                        </div>
                    </div>
                </div>
            </div></a>
        {% endif %}
        {% endfor %}

      </ul>
    </div>
  </div>
</div>

{% endblock %}