                <div class="container my-6">
					<div class="row">
						<h2>Recursos</h2>
					</div>
                    
					<div class="row ">
						{% for recurso in collections.recursos %}
						<!-- Recurso -->
						<div class="col-md-4 col-lg-4 col-sm-12">
							<div class="cuadro_blog ">
								<a href="{{recurso.data.enlace}}"><img src="{{ recurso.data.image }}" alt="Evento" class="w-36"></a>
								<div class="px-4 py-4 text-left">
									<i class="fa-solid fa-calendar"></i><span class="text-sm">
									{{recurso.data.date | dateFormat('DD/MM/YYYY')}}
									</span><br>
									<br>
									<h5 class="font-bold text-lg">
									{{recurso.data.title }}
									</h5>
									
									<span class="text-sm">
									{{recurso.data.description}}
									</span>
									
								</div>
								<a target="_blank" href="{{recurso.data.enlace}}"><div class="px-4 pb-2 pt-2 text-left" style="border-top:#ccc 1px solid">
